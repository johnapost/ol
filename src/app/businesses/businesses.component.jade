.wrapper
  .side.left-side
    #map
  .side.right-side
    <h2>Business Listings</h2>
    .content(*ngIf='businesses')
      md-nav-list(dense).results
        md-list-item(*ngFor='let business of businesses', (click)='openBusiness(business)') {{business.id}}: {{business.name}}
    .controls-wrapper
      .control.page-options
        md-input([(ngModel)]='page' type='number' ngControl='page' name='', (keyup.enter)='pageHandler()', (blur)='pageHandler()')
          span(md-prefix) Page:&nbsp;
        md-input([(ngModel)]='perPage' type='number' ngControl='perPage' name='', (keyup.enter)='subscribeHandler()', (blur)='subscribeHandler()')
          span(md-prefix) Per page:&nbsp;
      .control
        button(md-raised-button [disabled]='page === 1', disableRipple='true', (click)='previousPage()')
          md-icon chevron_left
          | Previous
        button(md-raised-button [disabled]='page === lastPage', disableRipple='true', (click)='nextPage()')
          | Next
          md-icon chevron_right
